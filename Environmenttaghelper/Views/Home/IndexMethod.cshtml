 @model IEnumerable<Employee>
@{ 
    ViewBag.PageTitle = "Employee List";
}
    
<div class="card-deck">
    @foreach(var employee in Model)
            {
                <div class="card m-3">
                    <div class="card-header">
                        <h3>@employee.Name</h3>
                    </div>
                    <img class="card-img-top" src="~/images/noimage.jpg"/>
                    <div class="card-footer text-center">
                      <!---Tag helper-->
                        <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
                           class="btn btn-primary">display </a>
                        <!---html helper-->
                        @Html.ActionLink("View","details","home","indexmethod",new {id=employee.Id })
                        <a href="/home/details/@employee.Id" class="btn btn-primary">view</a>
                        <a href="#" class="btn btn-primary">edit</a>
                        <a href="#" class="btn btn-primary">delete</a>
                    </div>
                </div>
            }

</div>